    <xf:model id="model-1">
        <xf:instance id="event">
            <Document xmlns="">
                <Event>
                    <EventDate>2018-06-20</EventDate>
                    <EventTime>11:30:00</EventTime>
                    <EventDuration/>
                    <EventMorningAfternoon>PM</EventMorningAfternoon>
                    <Title>XForms testing</Title>
                    <EventType>Concert</EventType>
                    <PeopleNumAtEvent/>
                    <EventDescription>Descriptive text.</EventDescription>                    
                    <NameOfMainContact/>
                    <MainContactTelephone>01</MainContactTelephone>
                    <MainContactEmail/>
                    <NameOfTechnical/>
                    <TechTelephone/>
                    <TechEmail/>
                    <EventAddress1/>
                    <EventAddress2/>
                    <EventAddress3/>
                    <EventTown/>
                    <EventPostCode/>
                 </Event>                  
            </Document>
        </xf:instance>
        <xf:instance id="test">
            <Document xmlns="">
                <TEST/>
            </Document>
        </xf:instance> 
        <xf:bind nodeset="instance('event')/Event/EventDate" type="xs:date" required="true()" />
        <xf:bind nodeset="instance('event')/Event/EventTime"  type="xs:time"/>
        <xf:bind nodeset="instance('event')/Event/ChoirArrivalTime" type="xs:time"/>
        <xf:bind nodeset="instance('event')/Event/MusiciansArrivalTime" type="xs:time"/>
        <xf:bind nodeset="instance('event')/Event/Donation" required="true()"/>
        <xf:bind nodeset="instance('event')/Event/Title" required="true()"/> 
        
